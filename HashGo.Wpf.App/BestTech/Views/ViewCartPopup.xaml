<Window
    x:Class="HashGo.Wpf.App.BestTech.Views.ViewCartPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:HashGo.Wpf.App.Views.Controls"
    xmlns:converters="clr-namespace:HashGo.Wpf.App.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:HashGo.Wpf.App.BestTech.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="popupWindow"
    Title="ViewCartPopup"
    Margin="5,0"
    local:DialogResultHelper.DialogResult="{Binding DiaglogResult, Mode=TwoWay}"
    AllowsTransparency="True"
    Background="White"
    BorderBrush="Gray"
    BorderThickness="1"
    Deactivated="popupWindow_Deactivated"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="Manual"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <converters:BooleanToColorConverter x:Key="booleanToColorConverter" />
        <converters:HashTechImageConverter x:Key="imageValueConverter" />
        <Style TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border
                            x:Name="border"
                            Width="432"
                            Height="61"
                            Margin="0,2,0,0"
                            Background="{Binding IsEnabled, Mode=TwoWay, Converter={StaticResource booleanToColorConverter}}"
                            CornerRadius="5"
                            Cursor="Hand">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="Black" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="True">
                                <Setter Property="Background" Value="#00B5CB" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>

                </Setter.Value>
            </Setter>

        </Style>
    </Window.Resources>
    <Border
        Background="White"
        BorderBrush="LightGray"
        BorderThickness="0.5"
        CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    FontSize="18"
                    FontWeight="Medium"
                    Text="Cart" />
                <Border
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="1"
                    Cursor="Hand"
                    PreviewMouseLeftButtonUp="TextBlock_PreviewMouseLeftButtonUp">
                    <Path
                        Data="M19.2 57L15 52.8L31.8 36L15 19.2L19.2 15L36 31.8L52.8 15L57 19.2L40.2 36L57 52.8L52.8 57L36 40.2L19.2 57Z"
                        Fill="#8B8B8B"
                        Stretch="Uniform" />
                </Border>

            </Grid>
            <ScrollViewer
                Grid.Row="1"
                controls:KineticBehaviour.HandleKineticScrolling="True"
                HorizontalScrollBarVisibility="Visible"
                VerticalScrollBarVisibility="Hidden">
                <ItemsControl
                    x:Name="lstBox"
                    Focusable="False"
                    ItemsSource="{Binding SelectedUnitsToDisplay, Mode=TwoWay}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Width="310"
                                Height="278"
                                Margin="0,0,3,0"
                                BorderBrush="LightGray"
                                BorderThickness="0.7"
                                CornerRadius="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0.7*" />
                                        <RowDefinition Height="0.3*" />
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Image
                                            Grid.Column="0"
                                            Width="94"
                                            Height="94"
                                            Source="{Binding ImageSource, Converter={StaticResource imageValueConverter}}" />
                                        <ScrollViewer
                                            Grid.RowSpan="2"
                                            Grid.Column="1"
                                            Margin="2,0,0,2"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            HorizontalScrollBarVisibility="Auto"
                                            VerticalScrollBarVisibility="Auto">
                                            <StackPanel Margin="0,5,5,0">
                                                <TextBlock
                                                    FontFamily="{StaticResource BaijamureeFontMediumStyle}"
                                                    FontSize="16"
                                                    FontWeight="Regular"
                                                    Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    TextWrapping="Wrap" />
                                                <TextBlock
                                                    Margin="0,8,0,0"
                                                    FontFamily="{StaticResource BaijamureeFontSemiBoldStyle}"
                                                    FontSize="16"
                                                    FontWeight="Regular"
                                                    Text="{Binding SelectedAddOns}" />
                                            </StackPanel>
                                        </ScrollViewer>


                                    </Grid>
                                    <Grid
                                        Grid.Row="1"
                                        Margin="5"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Border
                                            Grid.Column="0"
                                            Width="142"
                                            Height="32"
                                            HorizontalAlignment="Left"
                                            Background="#00B5CB"
                                            CornerRadius="10"
                                            Cursor="Hand">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                                                    <i:InvokeCommandAction Command="{Binding DataContext.EditProductCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Foreground="Black"
                                                Text="Edit" />
                                        </Border>
                                        <Border
                                            Grid.Column="1"
                                            Width="142"
                                            Height="32"
                                            Margin="5,0,0,0"
                                            HorizontalAlignment="Left"
                                            Background="#E66E6E"
                                            CornerRadius="10"
                                            Cursor="Hand">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                                                    <i:InvokeCommandAction Command="{Binding DataContext.RemoveProductCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Foreground="Black"
                                                Text="Remove" />
                                        </Border>
                                    </Grid>
                                </Grid>
                            </Border>

                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Grid
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="0,0,0,10">

                <ToggleButton
                    MaxWidth="432"
                    MaxHeight="61"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Gray"
                    Command="{Binding NavigateToCheckoutScreen}"
                    Content="Proceed to Checkout"
                    FontSize="18"
                    Foreground="White"
                    IsEnabled="{Binding IsEnabled, Mode=TwoWay}" />
            </Grid>

        </Grid>
    </Border>

</Window>
