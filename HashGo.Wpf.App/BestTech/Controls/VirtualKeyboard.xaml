    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <!--<Setter Property="MinHeight" Value="67"/>-->
            <!--<Setter Property="MinWidth" Value="67"/>-->
            <!--<Setter Property="MinHeight" Value="30"/>
     <Setter Property="MinWidth" Value="30"/>-->
