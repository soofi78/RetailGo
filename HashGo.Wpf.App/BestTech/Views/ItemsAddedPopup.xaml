<Window
    x:Class="HashGo.Wpf.App.BestTech.Views.ItemsAddedPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HashGo.Wpf.App.BestTech.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ItemsAddedPopup"
    Background="White"
    WindowStartupLocation="Manual"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1">
            <Image
                Width="100"
                Height="100"
                Source="/Resources/Images/Daikin.png" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock
                    FontFamily="Medium"
                    FontWeight="Bold"
                    Foreground="#00B5CB"
                    Text="{Binding UnitsCount, RelativeSource={RelativeSource AncestorType=Window}}" />
                <TextBlock
                    FontFamily="Medium"
                    Foreground="Gray"
                    Text=" Items are added to your Cart" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
