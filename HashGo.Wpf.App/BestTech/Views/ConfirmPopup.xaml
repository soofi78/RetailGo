<Window
    x:Class="HashGo.Wpf.App.BestTech.Views.ConfirmPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:HashGo.Wpf.App.BestTech.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="480"
    Height="150"
    d:DesignHeight="450"
    d:DesignWidth="800"
    AllowsTransparency="True"
    Background="#AA000000"
    ShowInTaskbar="False"
    Topmost="True"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        Width="400"
        Height="200"
        Background="White"
        BorderBrush="Black"
        BorderThickness="0.5"
        CornerRadius="15">
        <Grid
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                x:Name="tBlockMessage"
                Margin="15,20,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontFamily="{StaticResource BaijamureeFontSemiBoldStyle}"
                FontSize="24"
                Foreground="Black"
                Text="Confirm to Start Over?"
                TextWrapping="Wrap" />

            <Grid Grid.Row="1" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Border
                    Grid.Column="0"
                    Width="100"
                    Height="50"
                    Margin="20,10,20,0"
                    HorizontalAlignment="Stretch"
                    Background="white"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="8"
                    Cursor="Hand"
                    PreviewMouseLeftButtonUp="NoButton_PreviewMouseLeftButtonUp">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource BaijamureeFontSemiBoldStyle}"
                        Foreground="Black"
                        Text="No" />
                </Border>

                <Border
                    Grid.Column="1"
                    Width="100"
                    Height="50"
                    Margin="20,10,20,10"
                    HorizontalAlignment="Stretch"
                    Background="#00B5CB"
                    CornerRadius="8"
                    Cursor="Hand"
                    PreviewMouseLeftButtonUp="YesButton_PreviewMouseLeftButtonUp">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource BaijamureeFontSemiBoldStyle}"
                        Foreground="Black"
                        Text="Yes" />
                </Border>
            </Grid>

        </Grid>

    </Border>
</Window>
