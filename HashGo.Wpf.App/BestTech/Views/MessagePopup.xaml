<Window
    x:Class="HashGo.Wpf.App.BestTech.Views.MessagePopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HashGo.Wpf.App.BestTech.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MessagePopup"
    Width="300"
    Height="100"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        MinHeight="80"
        MaxWidth="300"
        BorderBrush="Black"
        BorderThickness="0.5"
        CornerRadius="5">
        <StackPanel
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                Margin="15,10,0,0"
                VerticalAlignment="Center"
                FontSize="15"
                FontWeight="Medium"
                Foreground="Black"
                Text="Order created with id: "
                TextWrapping="Wrap" />
            <TextBlock
                Margin="0,10,0,0"
                VerticalAlignment="Center"
                FontSize="15"
                FontWeight="Medium"
                Foreground="#00B5CB"
                Text="{Binding Message, RelativeSource={RelativeSource AncestorType=Window}}"
                TextWrapping="Wrap" />

        </StackPanel>

    </Border>
</Window>
