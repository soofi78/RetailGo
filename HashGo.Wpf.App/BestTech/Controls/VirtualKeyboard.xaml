        </Grid.RowDefinitions>

        <Border Width="72" Height="72" Cursor="Hand"
                Background="Transparent" HorizontalAlignment="Right" 
                VerticalAlignment="Center" MouseLeftButtonUp="Path_MouseLeftButtonUp">
            <Path Fill="#8B8B8B" 
       Data="M19.2 57L15 52.8L31.8 36L15 19.2L19.2 15L36 31.8L52.8 15L57 19.2L40.2 36L57 52.8L52.8 57L36 40.2L19.2 57Z" 
       Stretch="Uniform"  
       />
        </Border>
       

        <TextBlock Text="Add a Referral Code" FontFamily="{StaticResource BaijamureeFontSemiBoldStyle}" FontWeight="SemiBold"
                   FontSize="24" Grid.Row="1"
                   Margin="0,10" HorizontalAlignment="Center" VerticalAlignment="Center"/>


        <TextBox x:Name="tBoxInput"  Grid.Row="2" Style="{StaticResource RoundedTextBoxWithShadowStyle}" Margin="0,5,0,5" 
                 KeyDown="tBoxInput_KeyDown"
                MaxHeight="113" MaxWidth="637"  MinHeight="60" MinWidth="400"/>

        <Border Background="#00B5CB" Margin="0,10,0,10" Grid.Row="3" 
                 Cursor="Hand" BorderBrush="Black" BorderThickness="1"
                 HorizontalAlignment="Center" PreviewMouseLeftButtonUp="Border_PreviewMouseLeftButtonUp"
                 Width="372" Height="60"
                 CornerRadius="20">
            <!--<i:Interaction.Triggers>
